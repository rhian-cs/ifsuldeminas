<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Tela_03_CriarFicha">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Criar uma nova ficha"
        android:textSize="36sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dip" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Opcional) Apelide sua Ficha:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dip" />

    <TextView
        android:id="@+id/textViewSeriesPadrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de séries padrão:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextSeriesPadrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="3" />

    <TextView
        android:id="@+id/textViewRepeticoesPadrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de repetições padrão:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextRepeticoesPadrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCriarFicha"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="Criar ficha" />
    </LinearLayout>

</LinearLayout>